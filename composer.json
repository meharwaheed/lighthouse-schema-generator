{
    "name": "nodesol/lighthouse-schema-generator",
    "keywords": [
        "laravel",
        "lighthouse-schema-generator"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Amer Chaudhary",
            "email": "amer@nodesol.com"
        }
    ],
    "require": {
        "php": ">= 8.1",
        "nuwave/lighthouse": "^6.16",
        "doctrine/dbal": "^3.6"
    },
    "require-dev": {
        "orchestra/testbench": "^8.10.1",
        "vimeo/psalm": "^5.15.0"
    },
    "autoload": {
        "psr-4": {
            "Nodesol\\LighthouseSchemaGenerator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nodesol\\LighthouseSchemaGenerator\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Nodesol\\LighthouseSchemaGenerator\\SchemaGeneratorServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "phpunit --colors=always"
    }
}
